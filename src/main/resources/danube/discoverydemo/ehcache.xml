<ehcache>	

    <diskStore path="java.io.tmpdir" />

    <cache 
		name="DiscoveryDemoServlet_CLOUD_CACHE"
		maxElementsInMemory="5000"
		eternal="true"
		overflowToDisk="true"
		diskPersistent="true" 
		memoryStoreEvictionPolicy="LRU"
		diskExpiryThreadIntervalSeconds="60" />

	<defaultCache name="default" />

</ehcache>
